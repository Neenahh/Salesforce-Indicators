<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Indicator Bundle</masterLabel>
    <description>Display at-a-glance visual representations of status, values, and key details about a record.</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="bundleId" type="String" label="Indicator Bundle" datasource="apex://IndicatorListBundleSelector" description="Choose the Indicator Bundle."/>
            <property name="indsSize" type="String" label="Icon Size" placeholder="large" datasource="large,medium" description="Choose the Icon Size."/>
            <property name="indsShape" type="String" label="Icon Shape" placeholder="base" datasource="base,circle" description="Choose the Icon Shape."/>
            <supportedFormFactors>
                <supportedFormFactor type="Large" />
                <supportedFormFactor type="Small" />
            </supportedFormFactors>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>